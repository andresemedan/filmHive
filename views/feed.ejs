<%- include('partials/header', {user:user}) -%>
<div class="container feed-container">
  <div class="row justify-content-center">
    <% for(var i=0; i<projects.length; i++) {%>
      <div class="col mt-5">
        <div class="d-flex justify-content-center">
          <div class="card col-lg-4 col-md-6 col-sm-12 col-12 shadow-sm p-3 mb-5 bg-white rounded">
            <% if(projects[i].user == user.id){ %>
              <a class="logline" href="/project/myProject/<%= projects[i]._id%>">
            <% } else { %>
              <a class="logline" href="/project/<%= projects[i]._id%>">
            <% } %>
              <!-- <img src="<%= projects[i].image%>" class="card-img-top card-img" alt="project image"> -->
              <div class="card-body">
                <h5 class="card-title"><%= projects[i].title %></h5>
                <p class="card-text courier"><%= projects[i].caption %></p>
                <span class="courier">Created by: <%= projects[i].user.userName %></span>
              </div>
            </div>
          </div>
        </div>
      </a>
    <% } %>
  </div>
</div>

<script src="/js/feed.js"></script>
<%- include('partials/footer') -%>
